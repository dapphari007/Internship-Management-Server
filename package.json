{
  "name": "internship-platform-server",
  "version": "1.0.0",
  "description": "Backend API for Internship Platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:setup": "tsx src/scripts/setup.ts",
    "db:setup:force": "tsx src/scripts/setup.ts -- --force",
    "db:reset": "tsx src/scripts/setup.ts -- --seed --force",
    "db:migrate:profile-completion": "tsx src/scripts/migrate-profile-completion.ts",
    "db:create-profile-trigger": "tsx src/scripts/create-profile-completion-trigger.ts",
    "db:setup:profile-completion": "npm run db:migrate:profile-completion && npm run db:create-profile-trigger",
    "setup:project": "node scripts/setup-project.js",
    "setup:notifications": "tsx scripts/setup-notifications.js",
    "setup:courses": "node scripts/setup-courses-db.cjs",
    "setup:admin-tasks": "node scripts/setup-admin-tasks.cjs",
    "setup:all": "npm run setup:notifications && npm run setup:courses && npm run setup:admin-tasks"
  },
  "dependencies": {
    "@types/node": "^20.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/pg": "^8.10.9",
    "@types/validator": "^13.15.2",
    "tsx": "^4.6.2"
  }
}
